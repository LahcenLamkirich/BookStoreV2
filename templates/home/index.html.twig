        }

        .banner-text a:hover {
            background: #fff ; 
            color: #000;
            transition: 1s; 
        }
        @keyframes animation1 {
            from{
                width: 0;
            }
            to {
                width: 100%;
            }
        }
        @keyframes animation2 {
            from, to{
                border-color: transparent;
            } 50%{border-color: #fff}
